<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
	<Appenders>
		<File name="file" fileName="bank-account.log">
			<PatternLayout pattern="%d %-5p [%t] %c : %m%n" />
		</File>
	</Appenders>

	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="file" />
		</Root>
	</Loggers>
</Configuration>